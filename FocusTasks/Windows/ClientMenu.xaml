<Window x:Class="FocusTasks.Windows.ClientMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusTasks.Windows"
        mc:Ignorable="d"
        Title="ClientMenu" Background="DarkGray" MaxHeight="600" MaxWidth="1050" MinHeight="600" MinWidth="1050">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="83"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray"  Background="Gray" BorderThickness="1" HorizontalAlignment="Left" Height="83" VerticalAlignment="Top" Width="242"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="FocusTasks" FontFamily="Comic Sans MS" FontSize="28"   VerticalAlignment="Top" Height="38" Width="162" Margin="42,7,0,0" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="менеджер по задачам" FontFamily="Comic Sans MS" FontSize="20"   VerticalAlignment="Top" Height="27" Width="226" Margin="8,46,0,0" FontWeight="Bold"/>
        <Border BorderBrush="Gray"  Background="Gray" BorderThickness="1" HorizontalAlignment="Left" Height="83" VerticalAlignment="Top" Width="811" Margin="239,0,0,0"/>
        <Button Content="Задачи" BorderBrush="Gray" Background="Gray" FontFamily="Comic Sans MS" FontSize="25"  HorizontalAlignment="Left" Height="83" Margin="242,0,0,0" VerticalAlignment="Top" Width="150" x:Name="Tasks_Button" Click="Tasks_Button_Click" />
        <Button Content="Проекты" BorderBrush="Gray" Background="Gray" FontFamily="Comic Sans MS" FontSize="25"  HorizontalAlignment="Left" Height="83" Margin="392,0,0,0" VerticalAlignment="Top" Width="150" Click="Project_Click"/>
        <Button Content="Команды" BorderBrush="Gray" Background="Gray" FontFamily="Comic Sans MS" FontSize="25"  HorizontalAlignment="Left" Height="83" Margin="542,0,0,0" VerticalAlignment="Top" Width="150" Click="Teams_Click"/>
        <Button Content="Личный кабинет" BorderBrush="Gray" Background="Gray" FontFamily="Comic Sans MS" FontSize="25"  HorizontalAlignment="Left" Height="83" Margin="692,0,0,0" VerticalAlignment="Top" Width="208" Click="Account_Click"/>
        <Button Content="Выйти" BorderBrush="Gray" Background="Gray" FontFamily="Comic Sans MS" FontSize="25"  HorizontalAlignment="Left" Height="83" Margin="900,0,0,0" VerticalAlignment="Top" Width="140" x:Name="BackToMenuButton" Click="BackToMenuButton_Click"/>

        <Frame Grid.Row="1" Name="FrameObject"></Frame>
   
    </Grid>
</Window>
