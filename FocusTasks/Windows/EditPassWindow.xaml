<Window x:Class="FocusTasks.Windows.EditPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusTasks.Windows"
        mc:Ignorable="d"
        Title="EditPassWindow" Background="DarkGray" MaxHeight="150" MaxWidth="300" MinHeight="150" MinWidth="300">
    <Grid>
        <TextBox Name="EditPass" HorizontalAlignment="Center" Background="WhiteSmoke" TextWrapping="Wrap" Text="" TextAlignment="Center" VerticalAlignment="Top" Width="280" Height="35" FontSize="20" FontFamily="Comic Sans MS" Margin="0,32,0,0" TextChanged="EditPass_TextChanged"/>
        <Button Content="Изменить пароль" x:Name="EditButton" Click="EditButton_Click" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Height="30" Width="168" FontSize="18" FontFamily="Comic Sans MS"/>
        <Label Content="Введите новый пароль" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" FontFamily="Comic Sans MS" Height="32"/>

    </Grid>
</Window>
