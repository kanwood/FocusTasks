<Window x:Class="FocusTasks.Windows.EditUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusTasks.Windows"
        mc:Ignorable="d"
        Title="EditUsers" Background="DarkGray" MaxHeight="600" MaxWidth="1050" MinHeight="600" MinWidth="1050">
    <Grid>
        <Button Content="Назад" HorizontalAlignment="Left" Height="41" Margin="58,485,0,0" VerticalAlignment="Top" Width="142" FontSize="20" FontFamily="Comic Sans MS" x:Name="BackButton" Click="BackButton_Click"/>
        <TextBox Background="GhostWhite"  HorizontalAlignment="Left" Height="38" Margin="61,134,0,0" TextWrapping="Wrap" Text="{Binding FullName}" VerticalAlignment="Top" Width="925" x:Name="FullNameBox" FontSize="20" FontFamily="Comic Sans MS"/>
        <Label Content="ФИО" HorizontalAlignment="Left" Height="38" Margin="61,91,0,0" VerticalAlignment="Top" Width="132" FontSize="20" FontFamily="Comic Sans MS"/>
        <Label Content="Редактирование пользователя" HorizontalAlignment="Center" Height="38" Margin="0,22,0,0" VerticalAlignment="Top" Width="310" FontSize="20" FontFamily="Comic Sans MS"/>
        <TextBox Background="GhostWhite" HorizontalAlignment="Left" Height="38" Margin="61,295,0,0" TextWrapping="Wrap" Text="{Binding Email}" VerticalAlignment="Top" Width="925" x:Name="EmailBox" FontSize="20" FontFamily="Comic Sans MS"/>
        <Label Content="Почта" HorizontalAlignment="Left" Height="39" Margin="61,257,0,0" VerticalAlignment="Top" Width="132" FontSize="20" FontFamily="Comic Sans MS"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Height="40" Margin="61,340,0,0" VerticalAlignment="Top" Width="132" FontSize="20" FontFamily="Comic Sans MS"/>
        <Button Content="Изменить данные" HorizontalAlignment="Left" Height="41" Margin="805,485,0,0" VerticalAlignment="Top" Width="181" FontSize="20" FontFamily="Comic Sans MS" x:Name="RegButton" Click="RegButton_Click"/>
        <TextBox Background="GhostWhite" HorizontalAlignment="Left" Height="38" Margin="61,216,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" Width="925" x:Name="LoginBox" FontSize="20" FontFamily="Comic Sans MS"/>
        <Label Content="Логин" HorizontalAlignment="Left" Height="40" Margin="61,173,0,0" VerticalAlignment="Top" Width="132" FontSize="20" FontFamily="Comic Sans MS"/>
        <TextBox Background="GhostWhite" HorizontalAlignment="Left" Height="38" Margin="61,378,0,0" VerticalAlignment="Top" Text="{Binding Password}" Width="925" x:Name="PasswordBox" FontSize="20" FontFamily="Comic Sans MS"/>

    </Grid>
</Window>
