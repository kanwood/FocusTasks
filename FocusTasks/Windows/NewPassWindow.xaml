        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusTasks.Windows"
        mc:Ignorable="d"
        Title="NewPassWindow" Background="DarkGray" MaxHeight="150" MaxWidth="300" MinHeight="150" MinWidth="300">
    <Grid>
        <TextBox Name="newPasswordTB" HorizontalAlignment="Center" Background="DarkGray" TextWrapping="Wrap" Text="(new password)" TextAlignment="Center" VerticalAlignment="Top" Width="280" Height="57" FontSize="20" FontFamily="Comic Sans MS" Margin="0,10,0,0"/>
        <Button Content="Ок" x:Name="OkButton" Click="OkButton_Click" HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Top" Height="30" Width="168" FontSize="20" FontFamily="Comic Sans MS"/>

    </Grid>
</Window>
