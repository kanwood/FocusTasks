<Window x:Class="FocusTasks.Windows.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusTasks.Windows"
        mc:Ignorable="d"
        Title="EditUser" Background="DarkGray" MinHeight="200" MaxHeight="200" MinWidth="600" MaxWidth="600">
    <Grid Margin="0,0,0,-6">
        <Label Content="Роль" HorizontalAlignment="Center" Height="40" Margin="0,23,0,0" VerticalAlignment="Top" Width="64" FontSize="20" FontFamily="Comic Sans MS"/>
        <ComboBox DisplayMemberPath="Name" SelectedItem="{Binding Roles}" Background="GhostWhite" x:Name="RoleCB" HorizontalAlignment="Center" Height="38" VerticalAlignment="Center" Width="316"  FontSize="18" FontFamily="Comic Sans MS" SelectionChanged="RoleCB_SelectionChanged"/>

    </Grid>
</Window>
