<Window x:Class="FocusTasks.Windows.AdminAddTeams"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusTasks.Windows"
        mc:Ignorable="d"
        Background="DarkGray" MinHeight="270" MaxHeight="270" MinWidth="600" MaxWidth="600">
    <Grid>
        <Label Content="Команда" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Width="137" FontFamily="Comic Sans MS"/>
        <TextBox HorizontalAlignment="Left" Margin="10,84,0,0" x:Name="NameTeamTB" TextWrapping="Wrap" FontFamily="Comic Sans MS" Text="{Binding Name}" VerticalAlignment="Top" Width="570" Height="27"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Height="33" Margin="418,180,0,0" VerticalAlignment="Top" Width="130" FontFamily="Comic Sans MS" FontSize="20" Click="AddProject_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Height="33" Margin="31,180,0,0" VerticalAlignment="Top" Width="130" FontFamily="Comic Sans MS" FontSize="20" Click="BackClick"/>
        <Label Content="Введите данные для создание новой команды" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Top" Width="346" FontSize="15" Height="31" FontFamily="Comic Sans MS"/>

    </Grid>
</Window>
