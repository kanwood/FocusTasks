<Window x:Class="FocusTasks.Windows.AddEditTeam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusTasks.Windows"
        mc:Ignorable="d"
        Title="AddEditTeam" Background="DarkGray" MinHeight="200" MaxHeight="200" MinWidth="600" MaxWidth="600">
    <Grid>
        <Label Content="Команда" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Width="137" FontFamily="Comic Sans MS"/>
        <ComboBox DisplayMemberPath="Name" SelectedItem="{Binding Teams}" HorizontalAlignment="Left" Margin="10,85,0,0" x:Name="TeamCB" VerticalAlignment="Top" Width="570" Height="27" FontFamily="Comic Sans MS"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Height="33" Margin="422,319,0,0" VerticalAlignment="Top" Width="130" FontFamily="Comic Sans MS" FontSize="20" Click="AddTeam_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Height="32" Margin="14,336,0,0" VerticalAlignment="Top" Width="130" FontFamily="Comic Sans MS" FontSize="20" Click="BackClick"/>
        <Label Content="Выберите команду" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Top" Width="147" FontSize="15" Height="31" FontFamily="Comic Sans MS"/>

    </Grid>
</Window>
